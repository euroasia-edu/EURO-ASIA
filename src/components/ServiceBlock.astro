---
const {
  title,
  reverse = false
} = Astro.props;
---

<section class={`block ${reverse ? 'reverse' : ''}`}>
  <div class="media">
    <slot name="media" />
  </div>

  <div class="content">
    <h2>{title}</h2>
    <slot />
  </div>
</section>

<style>
.block {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 64px;
  align-items: center;
  margin: 96px auto; /* centru pe orizontală */
  max-width: 1200px;
  padding: 0 16px; /* pentru mobil */
}

.block.reverse {
  grid-template-areas: "content media"; /* inversăm ordinea vizuală */
  background: #f8f8f8;
  padding: 20px;
  border-radius: 10px;
}

.block.reverse .content {
  grid-area: content;
}
.block.reverse .media {
  grid-area: media;
}

.media img {
  width: 100%;
  border-radius: 12px;
  display: block;
}

.content h2 {
  margin-bottom: 16px;
}

@media (max-width: 768px) {
  .block {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .block.reverse {
    grid-template-areas:
      "media"
      "content"; /* pe mobil, imagine sus, text jos */
  }

  .media,
  .content {
    width: 100%;
  }
}
</style>
