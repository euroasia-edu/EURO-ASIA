---
const { title, reverse = false } = Astro.props;
---

<section class={`service-block ${reverse ? 'reverse' : ''}`}>
  <div class="service-image">
    <slot name="media" />
  </div>
  <div class="service-text">
    <h2>{title}</h2>
    <slot />
  </div>
</section>

<style>
.service-block {
  display: flex;
  align-items: center;
  gap: 32px;
  margin-bottom: 40px;
}

.service-block.reverse {
  flex-direction: row-reverse;
}

.service-image img {
  width: 100%;
  max-width: 400px;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.service-text h2 {
  margin-bottom: 12px;
  font-size: 1.8rem;
}

.service-text p {
  font-size: 1.1rem;
  line-height: 1.6;
}

@media (max-width: 768px) {
  .service-block {
    flex-direction: column !important;
    text-align: center;
  }
}
</style>
