---
const {
  title,
  reverse = false
} = Astro.props;
---

<section class={`block ${reverse ? 'reverse' : ''}`}>
  <div class="media">
    <slot name="media" />
  </div>

  <div class="content">
    <h2>{title}</h2>
    <slot />
  </div>
</section>

<style>
.block {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;      
  align-items: center;
  margin: 40px 1; 
}

.block.reverse {
  direction: rtl;
}

.block.reverse > * {
  direction: ltr;
}

.media img {
  width: 100%;
  border-radius: 12px;
}

.content h2 {
  margin-bottom: 20px;
}
@media (max-width: 768px) {
  .block {
    margin: 24px 0; /* mai pu»õin pe mobil */
  }
}

</style>
