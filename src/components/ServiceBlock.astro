---
const {
  title,
  reverse = false
} = Astro.props;
---

<section class={`block ${reverse ? 'reverse' : ''}`}>
  <div class="media">
    <slot name="media" />
  </div>

  <div class="content">
    <h2>{title}</h2>
    <slot />
  </div>
</section>

<style>
.block {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 64px;
  align-items: center;
  margin: 96px 1;
}

.block.reverse { direction: rtl; background: #f8f8f8; /* doar block-urile reverse au background */ padding: 20px; /* adaugă padding ca să nu fie textul lipit de margini */ border-radius: 10px; /* opțional, ca să arate mai bine */ }
.block.reverse > * {
  direction: ltr;
}

.media img {
  width: 100%;
  border-radius: 12px;
}

.content h2 {
  margin-bottom: 16px;
}
@media (max-width: 768px) {
  .block {
    grid-template-columns: 1fr; /* o singură coloană */
    gap: 24px; /* mai puțin spațiu între text și imagine */
  }

  .block.reverse {
    direction: ltr; /* ignorăm reverse pe mobil */
  }

  .media,
  .content {
    width: 100%;
  }
}


</style>
