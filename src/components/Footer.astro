---
const { lang = "ro" } = Astro.props;

const navButtons = {
  ro: [
    { text: "Servicii", href: "/ro/services" },
    { text: "Galerie", href: "/ro/gallery" },
    { text: "Contact", href: "/ro/contact" }
  ],
  en: [
    { text: "Services", href: "/en/services" },
    { text: "Gallery", href: "/en/gallery" },
    { text: "Contact", href: "/en/contact" }
  ]
};
---

<footer class="site-footer">
  <div class="container footer-container">

    <div class="footer-logo">
      <a href={lang === "ro" ? "/ro" : "/en"}>
        <img src="/logo.png" alt="EURO ASIA EDUCATION" />
      </a>
    </div>

    <nav class="footer-nav">
      {navButtons[lang].map(btn => (
        <a href={btn.href}>{btn.text}</a>
      ))}
    </nav>

    <div class="footer-policy-wrapper">
      <a href=../privacy class="footer-policy">
        Privacy Policy
      </a>
    </div>

    <p class="footer-copy">
      &copy; {new Date().getFullYear()} EURO ASIA EDUCATION. All rights reserved.
    </p>
  </div>
</footer>

