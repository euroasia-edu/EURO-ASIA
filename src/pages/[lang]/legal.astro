---
import BaseLayout from "../../layouts/BaseLayout.astro";
import roLegal from "../../i18n/ro/legal.js";  // ✅ DATE CENTRALIZATE

export async function getStaticPaths() {
  const langs = ['ro', 'en', 'it', 'es', 'pt', 'fr', 'de'];
  return langs.map(lang => ({
    params: { lang },
    props: { lang }
  }));
}

const { lang } = Astro.props;
let t;

try {
  t = (await import(`../../i18n/${lang}/legal.js`)).default;
} catch {
  t = (await import("../../i18n/it/legal.js")).default;
}
---

<BaseLayout title={t.title} lang={lang}>
  <div class="container">
    <section class="legal-section">
      <h1>{t.intro}</h1>

      <!-- DATE IDENTIFICARE -->
      <h2>{t.identification.title}</h2>
      <div class="identification-card">
        <p><strong>{t.identification.companyLabel}:</strong> {roLegal.identification.company}</p>
        <p><strong>{t.identification.partitaIvaLabel}:</strong> {roLegal.identification.partitaIva}</p>
        <p><strong>{t.identification.reaLabel}:</strong> {roLegal.identification.rea}</p>
        <p><strong>{t.identification.addressLabel}:</strong> {roLegal.identification.address}</p>
        <p><strong>{t.identification.phoneLabel}:</strong> {roLegal.identification.phone}</p>
        <p><strong>{t.identification.emailLabel}:</strong> <a class="p-mail" href={`mailto:${roLegal.identification.email}`}>{roLegal.identification.email}</a></p>
      </div>

      <!-- SECȚIUNI -->
      <h2>{t.usersTitle}</h2>
      <p>{t.users}</p>

      <h2>{t.propertyTitle}</h2>
      <p>{t.property}</p>

      <h2>{t.responsibilityTitle}</h2>
      <p>{t.responsibility}</p>

      <h2>{t.lawTitle}</h2>
      <p>{t.law}</p>

      <h2>{t.odrTitle}</h2>
      <p>{t.odr}</p>
    </section>
  </div>

  <style>
    .legal-section {
      max-width: 900px;
      margin: 0 auto;
      padding: 64px 16px;
      line-height: 1.7;
    }

    .legal-section h1 {
      font-size: 2.2rem;
      margin-bottom: 32px;
      color: #000a42;
    }

    .legal-section h2 {
      font-size: 1.5rem;
      margin: 40px 0 20px 0;
      color: #aa0000;
      border-bottom: 2px solid #f0f0f0;
      padding-bottom: 8px;
    }

    .identification-card {
      background: #f8f8f8;
      padding: 24px;
      border-radius: 12px;
      border-left: 4px solid #aa0000;
      margin: 24px 0;
    }

    .identification-card p {
      margin: 12px 0;
    }

    .p-mail {
      color: #aa0000;
      text-decoration: none;
    }

    .p-mail:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .legal-section {
        padding: 32px 16px;
      }
      .identification-card {
        padding: 20px;
      }
    }
  </style>
</BaseLayout>
