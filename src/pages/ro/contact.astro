---
import BaseLayout from "../../layouts/BaseLayout.astro";
---
<BaseLayout title="Contact | EURO ASIA EDUCATION" lang="ro">
  <section class="contact-section">
    <div class="container contact-container">

      <!-- Formular -->
      <form id="contact-form">
        <h1>Contactează-ne</h1>
        <label>
          Nume:
          <input type="text" name="name" placeholder="Numele tău" required />
        </label>
        <label>
          Email:
          <input type="email" name="email" placeholder="Email-ul tău" required />
        </label>
          <label>
    Telefon:
    <input type="tel" name="phone" placeholder="Numărul tău de telefon" required />
  </label>
        <label>
          Mesaj:
          <textarea name="message" placeholder="Scrie mesajul aici..." required></textarea>
        </label>
        <button type="submit">Trimite</button>
      </form>

      <!-- Date contact și locație -->
      <div class="contact-info">
        <h2>Date de contact</h2>
        <p><strong>Email:</strong> info@euroasia-education.com</p>
        <p><strong>Phone:</strong> </p>
        <p>+393 351 781 755</p>
        <p>+40 720 754 962</p>
        <p><strong>Adresă:</strong> 41013 Castelfranco E.</p>
      </div>

    </div>

    <!-- Hartă embed -->
<div class="map-container" style="margin-top: 20px;">
  <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2881.123456789!2d12.567890!3d44.067890!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1320c9f0abcd1234%3A0xabcdef1234567890!2sRimini%2C%20Italia!5e0!3m2!1sro!2s!4v1699999999999!5m2!1sro!2s"
    width="100%"
    height="400"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
  ></iframe>
</div>
  </section>

  <script type="module">
    import emailjs from "https://cdn.skypack.dev/@emailjs/browser";

    const form = document.getElementById("contact-form");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const serviceID = "contact_dumitrw";
      const templateID = "template_85gm9jl";
      const userID = "HacNSb-s6B7aEOg_w";

      try {
        await emailjs.sendForm(serviceID, templateID, form, userID);
        alert("Mesajul a fost trimis cu succes!");
        form.reset();
      } catch (err) {
        alert("A apărut o eroare. Încearcă din nou.");
        console.error(err);
      }
    });
  </script>

  <style>
    .contact-section {
      padding: 80px 0;
    }

    .contact-container {
      display: flex;
      gap: 60px;
      max-width: 1200px;
      margin: 0 auto;
      flex-wrap: wrap;
    }

    form, .contact-info {
      flex: 1 1 400px;
    }

    form h1 {
      margin-bottom: 24px;
      font-size: 2.2rem;
    }

    label {
      display: flex;
      flex-direction: column;
      font-weight: 500;
      font-size: 1.1rem;
      margin-bottom: 16px;
    }

    input, textarea {
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
      margin-top: 6px;
    }

    textarea {
      resize: vertical;
      min-height: 120px;
    }

    button {
      padding: 14px;
      background: var(--accent);
      color: white;
      font-size: 1.1rem;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s ease;
    }
    button:hover { background: #333; }

    .contact-info h2 {
      margin-bottom: 16px;
      font-size: 1.8rem;
    }

    .map-container {
      margin-top: 60px;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    @media (max-width: 768px) {
      .contact-container {
        flex-direction: column;
        gap: 40px;
      }
    }
  </style>
</BaseLayout>
