---
import BaseLayout from "../../layouts/BaseLayout.astro";

const about = {
  title: "Despre EURO ASIA EDUCATION",
  text: `Suntem dedicați educației internaționale și facilităm schimburi culturale.
Oferim consultanță, programe de studiu și suport complet pentru studenți.`,
  image: "/images/about.jpeg", // pui poza ta
};
---

<BaseLayout title="Acasă | EURO ASIA EDUCATION" lang="ro">

  <!-- About Section -->
  <section class="about-section">
    <div class="container about-container">
      <div class="about-text">
        <h1>{about.title}</h1>
        <p>{about.text}</p>
      </div>
      <div class="about-image">
        <img src={about.image} alt="Despre noi" />
      </div>
    </div>
  </section>

</BaseLayout>
