---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact | EURO ASIA EDUCATION" lang="en">
  <section class="contact-section">
    <div class="container contact-container">

      <!-- Form -->
      <form id="contact-form" class="contact-form">
        <h1>Contact Us</h1>
        <label>
          Name:
          <input type="text" name="name" placeholder="Your Name" required />
        </label>
        <label>
          Email:
          <input type="email" name="email" placeholder="Your Email" required />
        </label>
                  <label>
    Phone:
    <input type="tel" name="phone" placeholder="Your phone number" required />
  </label>
        <label>
          Message:
          <textarea name="message" placeholder="Write your message here..." required></textarea>
        </label>
        <button type="submit">Send</button>
      </form>

      <!-- Contact info and location -->
      <div class="contact-info">
        <h2>Contact Details</h2>
        <p><strong>Email:</strong> <a class="p-mail" href="mailto:info@euroasia-education.com">info@euroasia-education.com</a></p>
<p class="phone-line">
  <strong>Phone: </strong>
  <a class="p-mail" href="tel:+393 351 781 755">+393 351 781 755</a>
</p>
<p class="phone-line-second">
  <span></span><a class="p-mail" href="tel:+40 720 754 962">+40 720 754 962</a>
</p>

        <p><strong>Address:</strong> 41013 Castelfranco E.</p>
      </div>

    </div>

    <!-- Embedded map -->
    <div class="map-container" style="margin-top: 20px;">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2881.123456789!2d12.567890!3d44.067890!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1320c9f0abcd1234%3A0xabcdef1234567890!2sRimini%2C%20Italia!5e0!3m2!1sro!2s!4v1699999999999!5m2!1sen!2s"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>

  <script type="module">
    import emailjs from "https://cdn.skypack.dev/@emailjs/browser";

    const form = document.getElementById("contact-form");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const serviceID = "contact_euroasia";
      const templateID = "template_i9zhdlj";
      const userID = "-B3hqgeTkyNkvk0Wm";

      try {
        await emailjs.sendForm(serviceID, templateID, form, userID);
        alert("Your message has been sent successfully!");
        form.reset();
      } catch (err) {
        alert("An error occurred. Please try again.");
        console.error(err);
      }
    });
  </script>

</BaseLayout>
