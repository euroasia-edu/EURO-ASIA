---
import BaseLayout from "../../layouts/BaseLayout.astro";

const about = {
  title: "ABOUT US",
  text: `We are passionate about international education and experiences that broaden horizons. We facilitate cultural exchanges, study programs, and complete student support, ensuring safe, comfortable, and memorable mobility experiences.`,
  text2: `Our goal is for every student to leave with new knowledge, international friendships, and memories that inspire. We work alongside partners in Romania, Italy, and Turkey to make each mobility a real and opportunity-filled educational experience.`,
  image: "https://i.imgur.com/Ub3auHi.jpeg",
};
---

<BaseLayout title="Home | EURO ASIA EDUCATION" lang="en">

  <!-- About Section -->
  <section class="about-section">
    <div class="container about-container">
      <div class="about-text">
        <h1>{about.title}</h1>
        <p>{about.text}</p>
        <p>{about.text2}</p>
      </div>
      <div class="about-image">
        <img src={about.image} alt="About Us" />
      </div>
    </div>
  </section>

</BaseLayout>
